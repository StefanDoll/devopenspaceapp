<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:local="clr-namespace:developer.open.space.Clients.Views;assembly=developer.open.space.Clients.Views"
    xmlns:converters="clr-namespace:developer.open.space.Clients.Converters;assembly=developer.open.space.Clients.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="developer.open.space.Clients.Views.Cells.NotificationCell">
    <ContentView.Resources>
     <ResourceDictionary>
            <converters:HumanizeDateConverter x:Key="HumanizeDateConverter" />
     </ResourceDictionary>
    </ContentView.Resources>
      <StackLayout  HorizontalOptions="FillAndExpand" 
                      Padding="{StaticResource StandardPadding}" StyleId="NotificationItem">
            <Label Text="{Binding Text}" 
                   Style="{DynamicResource DevopenspaceListItemTextStyle}"/>

            <Label Text="{Binding Date, Converter={StaticResource HumanizeDateConverter}}"  
                   Style="{DynamicResource DevopenspaceListItemDetailTextStyle}"/>
       
       </StackLayout>
</ContentView>
