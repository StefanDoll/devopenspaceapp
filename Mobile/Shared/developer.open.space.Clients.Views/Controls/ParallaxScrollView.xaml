<?xml version="1.0" encoding="UTF-8"?>
<local:AlwaysScrollView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="developer.open.space.Clients.Views.Controls.ParallaxScrollView"
             xmlns:local="clr-namespace:developer.open.space.Clients.Views.Controls;assembly=developer.open.space.Clients.Views"
             xmlns:behaviors="clr-namespace:developer.open.space.Utils.Helpers;assembly=developer.open.space.Utils"
             Height="{Binding Height}"
             ScrollY="{Binding ScrollY}">
    <local:AlwaysScrollView.Behaviors>
        <behaviors:EventToCommandBehavior EventName="Scrolled" Command="{Binding IgnoreTappingCommand}" />
    </local:AlwaysScrollView.Behaviors>
</local:AlwaysScrollView>
