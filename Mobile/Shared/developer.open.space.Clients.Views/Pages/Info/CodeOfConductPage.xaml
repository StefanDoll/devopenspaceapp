<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:controls="clr-namespace:developer.open.space.Clients.Views.Controls;assembly=developer.open.space.Clients.Views"
    x:Class="developer.open.space.Clients.Views.CodeOfConductPage"
    Title="Code of Conduct"
    
    BackgroundColor="{DynamicResource WindowBackgroundTable}">
    <controls:AlwaysScrollView>
        <StackLayout Spacing="{DynamicResource CardSpacing}"
                    Padding="{DynamicResource CardPadding}">
            <controls:CardView>
                 <StackLayout Spacing="0">
                    <StackLayout HorizontalOptions="FillAndExpand" 
                                 VerticalOptions="FillAndExpand" 
                                  BackgroundColor="White"
                                  Padding="{StaticResource StandardPadding}">
                       
                        <Label x:Name="CodeOfConductText"
                               Style="{DynamicResource DevopenspaceListItemDetailextStyle}"
                               Text="{Binding Conduct}"/>
                   </StackLayout>
                </StackLayout>
            </controls:CardView>
        </StackLayout>
    </controls:AlwaysScrollView>
</ContentPage>
